{
    "name": "nova-kit/nova-devtool",
    "description": "Devtool for Laravel Nova Development",
    "type": "library",
    "keywords": ["laravel", "laravel-nova", "dev"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mior Muhammad Zaki",
            "email": "crynobone@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "NovaKit\\NovaDevTool\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NovaKit\\NovaDevTool\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "require": {
        "php": "^8.0",
        "composer-runtime-api": "^2.2",
        "fakerphp/faker": "^1.21",
        "laravel/nova": "^4.0",
        "orchestra/workbench": "^0.3.0 || ^0.4.0 || ^0.5.0"
    },
    "require-dev": {
        "nunomaduro/larastan": "^2.0",
        "orchestra/testbench": "^7.31 || ^8.11",
        "phpunit/phpunit": "^9.6"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "extra": {
        "branch-alias": {
            "dev-main": "1.0.x-dev"
        },
        "laravel": {
            "providers": [
                "NovaKit\\NovaDevTool\\LaravelServiceProvider"
            ]
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "@build",
            "@php vendor/bin/testbench serve"
        ],
        "lint": [
            "pint",
            "@php vendor/bin/phpstan analyse"
        ]
    },
    "prefer-stable": true,
    "minimum-stability": "dev"
}
